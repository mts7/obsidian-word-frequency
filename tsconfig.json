{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib":  ["ESNext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["obsidian", "node"],
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*",
    "node_modules/@types/jest/index.d.ts",
    "node_modules/@types/jest/index.d.ts",
    "node_modules/@types/jest/index.d.ts"
  ]
}
